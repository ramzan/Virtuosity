<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/routineListFragment">
    <fragment
        android:id="@+id/exerciseListFragment"
        android:name="com.nazmar.musicgym.exercises.list.ExerciseListFragment"
        android:label="@string/exercises"
        tools:layout="@layout/fragment_exercise_list">
        <action
            android:id="@+id/action_exercisesFragment_to_exercisesGraph"
            app:destination="@id/exercisesGraph" />
        <action
            android:id="@+id/action_exerciseListFragment_to_exercisesGraph"
            app:destination="@id/exercisesGraph" />
        <action
            android:id="@+id/action_exerciseListFragment_to_newExerciseDialogFragment"
            app:destination="@id/newExerciseDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/routineListFragment"
        android:name="com.nazmar.musicgym.practice.routine.list.RoutineListFragment"
        android:label="@string/practice"
        tools:layout="@layout/fragment_routine_list">
        <action
            android:id="@+id/action_practiceFragment_to_routineEditor"
            app:destination="@id/routineEditorGraph" />
        <action
            android:id="@+id/action_routineListFragment_to_sessionFragment"
            app:destination="@id/sessionFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.nazmar.musicgym.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <navigation
        android:id="@+id/exercisesGraph"
        app:startDestination="@id/exerciseDetailFragment">
        <argument
            android:name="exerciseId"
            app:argType="long" />
        <fragment
            android:id="@+id/exerciseDetailFragment"
            android:name="com.nazmar.musicgym.exercises.detail.ExerciseDetailFragment"
            android:label="ExerciseDetailFragment">
            <argument
                android:name="exerciseId"
                app:argType="long" />
            <action
                android:id="@+id/action_exerciseDetailFragment_to_renameDialogFragment"
                app:destination="@id/renameDialogFragment" />
            <action
                android:id="@+id/action_exerciseDetailFragment_to_deleteDialogFragment"
                app:destination="@id/deleteDialogFragment" />
        </fragment>
        <dialog
            android:id="@+id/renameDialogFragment"
            android:name="com.nazmar.musicgym.exercises.detail.RenameDialogFragment"
            android:label="RenameDialogFragment">
            <argument
                android:name="exerciseId"
                app:argType="long" />
        </dialog>
        <dialog
            android:id="@+id/deleteDialogFragment"
            android:name="com.nazmar.musicgym.exercises.detail.DeleteDialogFragment"
            android:label="DeleteDialogFragment">
            <argument
                android:name="exerciseId"
                app:argType="long" />
        </dialog>
    </navigation>
    <navigation
        android:id="@+id/routineEditorGraph"
        app:startDestination="@id/routineEditor">
        <argument
            android:name="routineId"
            app:argType="long" />
        <fragment
            android:id="@+id/routineEditor"
            android:name="com.nazmar.musicgym.practice.routine.editor.RoutineEditorFragment"
            android:label="RoutineEditor">
            <argument
                android:name="routineId"
                app:argType="long" />
            <action
                android:id="@+id/action_routineEditor_to_durationPickerDialog"
                app:destination="@id/durationPickerDialog" />
        </fragment>
        <dialog
            android:id="@+id/durationPickerDialog"
            android:name="com.nazmar.musicgym.practice.routine.editor.DurationPickerDialogFragment"
            android:label="DurationPickerDialog">
            <argument
                android:name="exerciseIndex"
                app:argType="integer" />
            <argument
                android:name="routineId"
                app:argType="long" />
        </dialog>
    </navigation>
    <dialog
        android:id="@+id/newExerciseDialogFragment"
        android:name="com.nazmar.musicgym.exercises.list.NewExerciseDialogFragment"
        android:label="NewExerciseDialogFragment" />
    <fragment
        android:id="@+id/sessionFragment"
        android:name="com.nazmar.musicgym.practice.session.SessionFragment"
        android:label="SessionFragment" >
        <argument
            android:name="routineId"
            app:argType="long" />
    </fragment>
</navigation>
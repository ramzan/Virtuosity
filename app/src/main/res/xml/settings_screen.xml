<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/category_general">

        <ListPreference
            app:defaultValue="@string/value_theme_system"
            app:dialogTitle="@string/title_theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_entry_values"
            app:key="@string/key_theme"
            app:title="@string/title_theme" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_timer">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/key_timer_vibrate"
            app:title="@string/title_timer_vibrate" />

    </PreferenceCategory>

</PreferenceScreen>
